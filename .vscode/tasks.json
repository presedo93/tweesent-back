{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "tweesent-backend:latest",
				"dockerfile": "${workspaceFolder}/docker/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {"ports": [{"containerPort": 5000, "hostPort": 5000}]},
			"python": {
				"args": ["--host", "0.0.0.0", "--port", "5000", "app:app"],
				"module": "uvicorn"
			}
		}
	]
}